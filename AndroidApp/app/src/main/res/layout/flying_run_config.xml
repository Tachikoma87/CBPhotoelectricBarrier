<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_flying_run_config_lb1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:text="Lichtschranke 1"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_flying_run_config_lb1_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#020202"
                            android:onClick="onIVPreviewClicked" />

                        <Button
                            android:id="@+id/btn_flying_run_Config_lb1_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:onClick="onBtnPreviewFlyingRunConfigLB1Clicked"
                            android:text="Image" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_flying_run_config_lb1_mp1_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Messpunkt 1:" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp1_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="3"
                                    android:inputType="number" />

                                <TextView
                                    android:id="@+id/textView28"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp1_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_flying_run_config_lb1_mp2_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Messpunkt 2:" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp2_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />

                                <TextView
                                    android:id="@+id/textView30"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp2_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_flying_run_config_lb1_mp3_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Messpunkt 3:" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp3_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp3_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_flying_run_config_lb1_mp4_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Messpunkt 4:" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp4_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />

                                <TextView
                                    android:id="@+id/textView16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":" />

                                <EditText
                                    android:id="@+id/edit_flying_run_config_lb1_mp4_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:inputType="number" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_flying_run_config_lb1_sensitivity_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empfindlichkeit:" />

                            <EditText
                                android:id="@+id/edit_flying_run_config_lb1_sensitivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="5"
                                android:inputType="number" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_flying_run_config_lb1_cmd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onBtnCmdFlyingRunConfigLB1Clicked"
                    android:text="Suche" />

                <LinearLayout
                    android:id="@+id/lay_flying_run_config_lb1_devices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_flying_run_config_lb2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center|center_horizontal"
                    android:text="Lichtschranke 2"
                    android:textSize="20sp" />

                <LinearLayout
